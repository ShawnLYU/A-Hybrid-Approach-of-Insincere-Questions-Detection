{
  "dataset_reader": {
    "type": "quora_text_reader",
    "token_indexers": {
      "elmo":{
        "type": "elmo_characters"
      }
    }
  },
  // "train_data_path": "/u/shawnlyu/projects/linguistics/workdir/dev_data/train.dev.csv",
  // "validation_data_path": "/u/shawnlyu/projects/linguistics/workdir/dev_data/train.dev.csv",
  "train_data_path": "/u/shawnlyu/projects/linguistics/workdir/cleaned_data/train.csv",
  "validation_data_path": "/u/shawnlyu/projects/linguistics/workdir/cleaned_data/valid.csv",
  "model": {
    "type": "quora_insincere_classification",
    "text_field_embedder": {
      "elmo": {
        "type": "elmo_token_embedder",
        "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x2048_256_2048cnn_1xhighway/elmo_2x2048_256_2048cnn_1xhighway_options.json",
        "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x2048_256_2048cnn_1xhighway/elmo_2x2048_256_2048cnn_1xhighway_weights.hdf5",
        "do_layer_norm": false,
        "dropout": 0.5,
        "requires_grad": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 512,
      "hidden_size": 64,
      "num_layers": 2,
      "dropout": 0.5,
      "bidirectional": true
    },
    "encoder_cnn": {
      "type": "cnn",
      "embedding_dim": 1,
      "num_filters":64,
      "ngram_filter_sizes":[2]

    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 15,
    "patience": 5,
    "cuda_device": 0
  }
}